@page "{PlanName}/{PlanID:int}"
@using System.Data.SqlClient
@using Lab2.Pages.DB
@model Lab2.Pages.PlanSteps.IndexModel
@{
    ViewData["Title"] = "PlanSteps";
}

<h2 class="h2">@RouteData.Values["PlanName"] Plan Steps</h2>

<table class="table table-bordered table-responsive table-striped table-hover">
    <thead >
        <tr>
            <th>Step Description:</th>
            <th>Status:</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var p in Model.PlanStepsTable)
            {
                <tr>
                    <td>@p.StepDescription</td>
                    <td>@p.Status</td>
                    <td>
                    <a asp-page="/PlanSteps/AddPlanStep" class="btn" style="background-color:rebeccapurple; -webkit-text-fill-color:white;" asp-route-planId="@p.PlanID" asp-route-planName="@Model.PlanName">Add Steps</a>
                    </td>
                </tr>
            }

            DBClass.Lab2DBConnection.Close();
        }

    </tbody>
</table>
