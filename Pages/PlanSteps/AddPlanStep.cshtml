@model Lab2.Pages.PlanSteps.AddPlanStepModel
@{
    ViewData["Title"] = "AddPlanStep";
}

<h2>Add a new Plan Step</h2>

<br/>
<form asp-page="AddPlanStep">
    <input type="hidden" asp-for="@Model.NewPlanStep.PlanID" />
    <br />
    <input type="text" asp-for="@Model.NewPlanStep.StepDescription" placeholder="Description" />
    <span asp-validation-for="@Model.NewPlanStep.StepDescription" class="text-danger"></span>
    <br />
    <input type="text" asp-for="@Model.NewPlanStep.Status" placeholder="Status" />
    <span asp-validation-for="@Model.NewPlanStep.Status" class="text-danger"></span>
    <br />
    <br />
    <button type="submit" class="btn">Save</button>
    <button asp-page="AddPlanStep" asp-page-handler="PopulateHandler" class="btn" formnovalidate>Populate</button>
    <br />
    <br />
    @* <a asp-page="/PlanSteps/AddPlanStep">Clear</a>
    &nbsp; &nbsp; *@
    <a asp-page="/Plans/Index">Cancel</a> 
</form>
