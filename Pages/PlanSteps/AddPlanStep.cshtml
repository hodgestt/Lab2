@page 
@model Lab2.Pages.PlanSteps.AddPlanStepModel
@{
    ViewData["Title"] = "AddPlanStep";
}

<h2>Add a new Plan Step</h2>

<form asp-page="AddPlanStep">
    <input type="hidden" asp-for="@Model.NewPlanStep.PlanID" /> @* Dont need it here technically, but helpful for View and Model communication *@
    <br />
    <input type="text" asp-for="NewPlanStep.StepDescription" placeholder="Description" />
    <span asp-validation-for="NewPlanStep.StepDescription" class="text-danger"></span>
    <br />
    <input type="text" asp-for="NewPlanStep.Status" placeholder="Status" />
    <span asp-validation-for="NewPlanStep.Status" class="text-danger"></span>
    <br />
    <br />
    <button type="submit" class="btn" style="background-color:rebeccapurple; -webkit-text-fill-color:white;">Save</button>
    <button asp-page="AddPlanStep" asp-page-handler="PopulateHandler" class="btn" style="background-color:rebeccapurple; -webkit-text-fill-color:white;" formnovalidate>Populate</button>
    <br />
    <br />
    @* <a asp-page="/PlanSteps/AddPlanStep">Clear</a>
    &nbsp; &nbsp; *@
    <a asp-page="/Plan/Index" style="-webkit-text-fill-color:rebeccapurple;">Cancel</a>
</form>
