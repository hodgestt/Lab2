@page
@model Lab2.Pages.DataFiles.IndexModel
@{
    ViewData["Title"] = "DataFile";
}
<h2>Data Files</h2>
<table class="table table-bordered table-responsive table-hover">
    <thead class="table-dark">
        <tr>
            <th>DataName</th>
            <th>DataLocation</th>
            <th>DataDescription</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var dta in Model.DataTable)
            {
                <tr>
                    <td>@dta.DataName</td>
                    <td>@dta.DataLocation</td>
                    <td>@dta.DataDescription</td>
                </tr>
            }
        }
    </tbody>
</table>
<a asp-page="/DataFiles/AddDataFile" class="btn btn-outline-success">Add a New Data File</a>
