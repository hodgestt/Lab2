@page
@* Thomas Hodges *@
@model Lab2.Pages.DataFiles.AddDataFileModel
@{
    ViewData["Title"] = "AddDataFile";
}

<form asp-page="AddDataFile">
    <input type="text" asp-for="NewDataFile.DataName" placeholder="Data Name" />
    <span asp-validation-for="NewDataFile.DataName" class="text-danger"></span>
    <br />
    <input type="text" asp-for="NewDataFile.DataLocation" placeholder="Location" />
    <span asp-validation-for="NewDataFile.DataLocation" class="text-danger"></span>
    <br />
    <input type="text" asp-for="NewDataFile.DataDescription" placeholder="Description" />
    <span asp-validation-for="NewDataFile.DataDescription" class="text-danger"></span>
    <br />
    <br />
    <button type="submit" class="btn" style="background-color:rebeccapurple; -webkit-text-fill-color:white;">Save</button>
    <button asp-page="AddDataFile" asp-page-handler="PopulateHandler" class="btn" style="background-color:rebeccapurple; -webkit-text-fill-color:white;" formnovalidate>Populate</button>
    <br />
    <br />
    <a asp-page="/DataFiles/AddDataFile" style="-webkit-text-fill-color:rebeccapurple;">Clear</a>
    &nbsp; &nbsp;
    <a asp-page="/DataFiles/Index" style="-webkit-text-fill-color:rebeccapurple;">Cancel</a>

</form>