@page

@model Lab2.Pages.Plan.IndexModel
@{
    ViewData["Title"] = "Plan";
}

<h2>Plans</h2>
<table class="table table-bordered table-responsive table-hover">
    <thead class="table-dark">
        <tr>
            <th>PlanName</th>
            <th>PlanConcept</th>
            <th>DateCreated</th>
            <th> </th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var emp in Model.PlansTable)
            {
            <tr>
                <td>@emp.PlanName</td>
                <td>@emp.PlanConcept</td>
                <td>@emp.DateCreated</td>
                <td>
                    <a asp-page="/PlanSteps/Index" class="btn btn-primary" asp-route-planid="@emp.PlanID">View Steps</a>
                </td>
                    
            </tr>
            }
        }
    </tbody>
</table>

<a asp-page="/Plan/AddPlan" class="btn btn-outline-success">Add a New Plan</a>

<br/>
