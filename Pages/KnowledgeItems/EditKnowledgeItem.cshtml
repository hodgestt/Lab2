@model Lab2.Pages.KnowledgeItems.EditKnowledgeItemModel
@{
    ViewData["Title"] = "Edit KnowledgeItem";
}


<form asp-page="EditKnowledgeItem">
    <br />
    <input type="hidden" asp-for="@Model.KnowledgeItemToUpdate.KnowledgeId" />
    <label asp-for="@Model.KnowledgeItemToUpdate.Name" ></label>
    <input type="text" asp-for="@Model.KnowledgeItemToUpdate.Name" style=" background:white; -webkit-text-fill-color:rebeccapurple;" />
    <br />
    <label asp-for="@Model.KnowledgeItemToUpdate.Subject"></label>
    <input type="text" asp-for="@Model.KnowledgeItemToUpdate.Subject" style=" background:white; -webkit-text-fill-color:rebeccapurple;" />
    <br />
    <label asp-for="@Model.KnowledgeItemToUpdate.Category"></label>
    <input type="text" asp-for="@Model.KnowledgeItemToUpdate.Category" style=" background:white; -webkit-text-fill-color:rebeccapurple;" />
    <br />
    <label asp-for="@Model.KnowledgeItemToUpdate.Information"></label>
    <input type="text" asp-for="@Model.KnowledgeItemToUpdate.Information" style=" background:white; -webkit-text-fill-color:rebeccapurple;" />
    <br />
    <input type="hidden" class="form-control" asp-for="@Model.KnowledgeItemToUpdate.KnowledgeDateTime" value="@DateTime.Now.ToString("yyyy-MM-ddTHH:mm:ss")" required />
    <span class="validity" />
    <br />
    <input type="hidden" asp-for="@Model.KnowledgeItemToUpdate.EmployeeID" style=" background:white; -webkit-text-fill-color:rebeccapurple;"/>
    <br />
    <input type="submit" class="btn" style=" background-color:rebeccapurple; -webkit-text-fill-color:white;" asp-page="EditKnowledgeItem" />
    <a asp-page="Index" style=" -webkit-text-fill-color:rebeccapurple; ">Cancel</a>
</form>
