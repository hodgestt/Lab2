@page "{KnowledgeId:int}"
@* Jessica Shamloo *@
@model Lab2.Pages.SWOTs.AddSWOTModel
@{
    ViewData["Title"] = "AddSWOT";
}

<form asp-page="AddSWOT">
    <input type="text" asp-for="NewSWOT.Strengths" placeholder="Strengths" />
    <span asp-validation-for="NewSWOT.Strengths" class="text-danger"></span>
    <br />
    <input type="text" asp-for="NewSWOT.Weaknesses" placeholder="Weaknesses" />
    <span asp-validation-for="NewSWOT.Weaknesses" class="text-danger"></span>
    <br />
    <input type="text" asp-for="NewSWOT.Opportunities" placeholder="Opportunities" />
    <span asp-validation-for="NewSWOT.Opportunities" class="text-danger"></span>
    <br />
    <input type="text" asp-for="NewSWOT.Threats" placeholder="Threats" />
    <span asp-validation-for="NewSWOT.Threats" class="text-danger"></span>
    <br />
    <input type="hidden" asp-for="@Model.NewSWOT.KnowledgeId" placeholder="KnowledgeId" />
    <span asp-validation-for="NewSWOT.KnowledgeId" class="text-danger"></span>
    <br />
    <br />
    <button type="submit" class="btn" style=" background-color:rebeccapurple; -webkit-text-fill-color:white;">Save </button>
    <button asp-page="/SWOTs/AddSWOT" asp-page-handler="PopulateHandler" class="btn" style=" background-color:rebeccapurple; -webkit-text-fill-color:white;" formnovalidate>Populate</button>
    <br />
    <br />
    <a asp-page="/SWOTs/AddSWOT" style=" -webkit-text-fill-color:rebeccapurple;">Clear</a>
    &nbsp; &nbsp;
    <a asp-page="/KnowledgeItems/Index" style="-webkit-text-fill-color:rebeccapurple;">Cancel</a>

</form>

