@* Jessica Shamloo *@
@page 
@model Lab2.Pages.SWOTs.IndexModel
@{
    ViewData["Title"] = "SWOT";
}

<h2>SWOT Analyses</h2>

<table class="table table-bordered table-responsive table-hover">
    <thead>
        <tr>
            <th>Name</th> 
            <th>Strengths</th>
            <th>Weaknesses</th>
            <th>Opportunities</th>
            <th>Threats</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var swot in Model.SWOTTable)
            {
                <tr>
                    <td class="table-active">@swot.Name</td> 
                    <td class="table-success">@swot.Strengths</td>
                    <td class="table-danger">@swot.Weaknesses</td>
                    <td class="table-primary">@swot.Opportunities</td>
                    <td class="table-warning">@swot.Threats</td>
                    <td>
                        <a asp-page="/SWOTs/EditSWOT" class="btn" style=" background-color:rebeccapurple; -webkit-text-fill-color:white;" asp-route-swotid="@swot.SWOTID">Edit</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>
<a asp-page="/KnowledgeItems/Index" style="-webkit-text-fill-color:rebeccapurple;">Return to Knowledge Items</a>
<br />
